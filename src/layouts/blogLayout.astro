---
import type { CollectionEntry } from "astro:content";
import BaseLayout from "./baseLayout.astro";

type Props = CollectionEntry<"blog">["data"];

const { title, description, author, pubDate, heroImage } = Astro.props;
console.log("blog layout: ", Astro.props);
---

<BaseLayout>
    <article>
        <div class="title">
            <div class="author">
                <div class="hero-image">
                    {heroImage && <img src={heroImage} alt="" />}
                </div>
                {author}
            </div>
            <div class="content">
                <h3>{title}</h3>
                <div class="description">
                    {description}
                    {
                        pubDate && (
                            <div class="last-updated-on">
                                Published: {pubDate}
                            </div>
                        )
                    }
                </div>
            </div>
        </div>
        <div class="page">
            <slot />
        </div>
    </article>
</BaseLayout>

<style class="scss" scoped>
    article {
        color: #000;
        background: #fff6df;
        padding: 20px;
        .title {
            display: flex;
            justify-content: space-between;
        }
        .hero-image {
            width: 50px;
            height: 50px;
            img {
                width: 100%;
                height: 100%;
                border-radius: 50%;
            }
        }
        .content {
            display: flex;
            flex-direction: column;
            .description {
                color: #777;
                font-size: 12px;
                text-align: right;
            }
        }
        .page {
            text-indent: 20px;
        }
    }
</style>
